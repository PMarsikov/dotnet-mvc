@model MvcLibPavel.Models.UserInfo
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="sidenav">
         <div class="login-main-text" align-middle>
            <h2>Library<br></h2>
            <h3>Registration form<br></h3>
            
         </div>
      </div>
      
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form" align-middle>
               <form asp-action="RegisterUser" asp-controller="Register">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group">
                     <label asp-for="UserName">User Name</label>
                     <input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
                     <span asp-validation-for="UserName" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                     <label asp-for="Password">Password</label>
                     <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                     <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                  
                  <div class="text-danger">@ViewData["ErrorMessage"]</div>
                  <br>
                  <button type="submit" class="btn btn-black">Register</button>
               </form>
            </div>
         </div>
      </div>
    